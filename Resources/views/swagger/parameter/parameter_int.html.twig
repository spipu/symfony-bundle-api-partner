<span class="badge badge-secondary">{{ parameter.name }}</span>

{% if parameter.isRequired %}
    <span class="badge badge-warning">required</span>
{% endif %}

{% if parameter.minValue is not null %}
    <span class="badge badge-light">
        &gt;{% if not parameter.exclusiveMin %}={% endif %} {{ parameter.minValue }}
    </span>
{% endif %}

{% if parameter.maxValue is not null %}
    <span class="badge badge-light">
        &lt;{% if not parameter.exclusiveMax %}={% endif %} {{ parameter.maxValue }}
    </span>
{% endif %}
<br />

{% if parameter.defaultValue is not null %}
    <small>Default value:</small><span class="badge badge-light">{{ parameter.defaultValue }}</span>
    <br />
{% endif %}

{% if parameter.description %}
    <span class="small font-italic">{{ parameter.description|raw }}</span>
    <br />
{% endif %}
